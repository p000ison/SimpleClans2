<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.p000ison.dev.simpleclans2</groupId>
    <artifactId>SimpleClans-aggregator</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>
    <modules>
        <module>SimpleClansAPI</module>
        <module>SimpleClans2</module>
        <module>SimpleClansChat</module>
        <module>Test</module>
        <module>Distribution</module>
    </modules>

    <name>SimpleClans</name>
    <url>http://dev.bukkit.org/server-mods/simpleclans/</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.build.number>UNKNOWN</project.build.number>
        <main.basedir>${project.basedir}</main.basedir>
    </properties>

    <!-- Source code -->
    <scm>
        <connection>scm:git:git://github.com/p000ison/${project.name}.git</connection>
        <developerConnection>scm:git:git@github.com:p000ison/${project.name}.git</developerConnection>
        <url>https://github.com/p000ison/${project.name}</url>
    </scm>

    <!-- SimpleClans's repository -->
    <distributionManagement>
        <snapshotRepository>
            <id>repo-snap</id>
            <name>SimpleClans Snapshots</name>
            <url>http://jenkins.greatmancode.com/plugin/repository/everything/</url>
        </snapshotRepository>
    </distributionManagement>

    <!-- Continuous integration -->
    <ciManagement>
        <system>jenkins</system>
        <url>http://jenkins.greatmancode.com/job/${project.name}</url>
    </ciManagement>

    <!-- Manager Profiles-->
    <profiles>
        <profile>
            <id>jenkins</id>
            <activation>
                <property>
                    <name>env.BUILD_NUMBER</name>
                </property>
            </activation>
            <properties>
                <project.build.number>${env.BUILD_NUMBER}</project.build.number>
            </properties>
        </profile>
    </profiles>

    <build>
        <!--The final output name-->
        <finalName>
            ${project.artifactId}-${project.version}
        </finalName>

        <!-- Clean and install by default -->
        <defaultGoal>clean install</defaultGoal>

        <!-- Default resources settings -->
        <resources>
            <resource>
                <filtering>true</filtering>
                <directory>${basedir}/src/main/resources</directory>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.8.1</version>
                <inherited>false</inherited>
                <executions>
                    <execution>
                        <id>javadoc-jar</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>javadoc</goal>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>

                <configuration>
                    <quiet>true</quiet>
                    <docfilessubdirs>true</docfilessubdirs>
                    <sourcepath>${basedir}/SimpleClansAPI/src/main/java/com/p000ison/dev/simpleclans2/api</sourcepath>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <!-- Default dependencies for bukkit plugins -->
    <dependencies>
        <dependency>
            <groupId>org.bukkit</groupId>
            <artifactId>bukkit</artifactId>
            <version>1.4.2-R0.2-SNAPSHOT</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>net.milkbowl.vault</groupId>
            <artifactId>Vault</artifactId>
            <version>1.2.18-SNAPSHOT</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.3</version>
        </dependency>
        <dependency>
            <groupId>org.mcstats</groupId>
            <artifactId>metrics</artifactId>
            <version>1.1</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
    </dependencies>

    <!-- Default repositories for dependencies -->
    <repositories>
        <repository>
            <id>bukkit-repo</id>
            <url>http://repo.bukkit.org/content/groups/public/</url>
        </repository>
        <repository>
            <id>vault-repo</id>
            <url>http://ci.herocraftonline.com/plugin/repository/everything</url>
        </repository>
        <repository>
            <id>metrics</id>
            <url>http://repo.mcstats.org/content/repositories/releases/</url>
        </repository>
    </repositories>
</project>
